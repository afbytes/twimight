<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent"
	android:orientation="vertical" android:id="@+id/showTweetListRoot">

	<LinearLayout android:id="@+id/headerBar"
		android:layout_height="50dp" android:layout_width="match_parent"
		android:orientation="horizontal" android:background="@drawable/top_bar_background"
		android:gravity="center_vertical">
		<LinearLayout android:layout_width="wrap_content"
			android:layout_height="match_parent" android:orientation="horizontal"
			android:layout_gravity="left">
			<Button android:id="@+id/headerBarTimelineButton"
				android:layout_width="wrap_content" android:layout_height="fill_parent"
				android:text="Timeline" android:layout_marginRight="8dp" />
			<Button android:id="@+id/headerBarFavoritesButton"
				android:layout_width="wrap_content" android:layout_height="fill_parent"
				android:text="Favorites" android:layout_marginRight="8dp" />
			<Button android:id="@+id/headerBarMentionsButton"
				android:layout_width="wrap_content" android:layout_height="fill_parent"
				android:text="Mentions" android:layout_marginRight="8dp" />
		</LinearLayout>
		<LinearLayout android:layout_width="wrap_content"
			android:layout_height="match_parent" android:orientation="horizontal"
			android:layout_gravity="right">

			<ImageButton android:id="@+id/headerBarTweetButton"
				android:layout_width="50dp" android:layout_height="fill_parent"
				android:src="@android:drawable/ic_menu_edit"
				android:layout_marginRight="8dp" />
			<ImageButton android:id="@+id/headerBarSearchButton"
				android:layout_width="40dp" android:layout_height="fill_parent"
				android:src="@android:drawable/ic_menu_search" android:minWidth="40dp"/>
		</LinearLayout>
	</LinearLayout>
	<ch.ethz.twimight.net.twitter.TweetListView android:layout_height="fill_parent"
		android:layout_width="fill_parent" android:id="@+id/tweetList"
		android:fastScrollEnabled="true" android:scrollingCache="true" />
	<TextView android:id="@+id/tweetListEmpty"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:text="loading..." android:textSize="16sp" android:gravity="center"
		android:paddingTop="20dp" />

</LinearLayout>
