<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="twimightTheme" parent="android:Theme"> 
        <item name="android:windowTitleBackgroundStyle">@style/WindowTitleNormalBackground</item>   
    </style>
    <style name="twimightDisasterTheme" parent="android:Theme"> 
        <item name="android:windowTitleBackgroundStyle">@style/WindowTitleDisasterBackground</item>   
    </style> 
  <style name="Theme.Transparent" parent="android:Theme">
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowBackground">@color/transparent</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:backgroundDimEnabled">true</item>
  </style>
  <style name="title">
    <item name="android:textSize">40sp</item>
    <item name="android:textColor">@color/title</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:padding">10px</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>
  <style name="WindowTitleNormalBackground">     
	<item name="android:background">@color/titlenormalbackgroundcolor</item>                   
</style>
<style name="WindowTitleDisasterBackground">     
	<item name="android:background">@color/titledisasterbackgroundcolor</item>                   
</style>
</resources>