<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.ethz.twimight"
    android:versionCode="1700021"
    android:versionName="1.1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <permission
        android:name="ch.ethz.twimight.CONTENT_PROVIDERS"
        android:description="@string/permDescription"
        android:label="Access to Twimight content providers"
        android:protectionLevel="dangerous" />

    <application
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_label" >
        <activity
            android:name=".activities.ConditionsActivity"
            android:label="Twimight"
            android:launchMode="singleTop"
            android:noHistory="false"
            android:theme="@style/TwimightHolo.NormalMode.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.TipsActivity"
            android:label="Twimight"
            android:launchMode="singleTop"
            android:noHistory="false"
            android:theme="@style/TwimightHolo.NormalMode.NoActionBar" >
        </activity>
        <activity
            android:name=".activities.LoginActivity"
            android:label="Twimight"
            android:launchMode="singleTop"
            android:noHistory="false"
            android:theme="@style/TwimightHolo.NormalMode.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="bluetest"
                    android:scheme="my-app" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SearchableActivity"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".activities.TweetListActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="feedback"
                    android:scheme="my-app" />
            </intent-filter>

            <meta-data
                android:name="android.app.default_searchable"
                android:value=".activities.SearchableActivity" />
        </activity>
        <activity
            android:name=".activities.UserTweetListActivity"
            android:label="User Tweets"
            android:launchMode="singleTop" >
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".activities.SearchableActivity" />
        </activity>
        <activity
            android:name=".activities.TweetDetailActivity"
            android:label="Twimight"
            android:launchMode="singleTop" >
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".activities.SearchableActivity" />
        </activity>
        <activity
            android:name=".activities.UserProfileActivity"
            android:label="User"
            android:launchMode="singleTop" >
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".activities.SearchableActivity" />
        </activity>
        <activity
            android:name=".activities.UserListActivity"
            android:label="Twimight"
            android:launchMode="singleTop" >
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".activities.SearchableActivity" />
        </activity>
        <activity
            android:name=".activities.DmConversationListActivity"
            android:label="Direct Messages"
            android:launchMode="singleTop" >
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".activities.SearchableActivity" />
        </activity>
        <activity
            android:name=".activities.DmListActivity"
            android:label="Direct Messages">
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".activities.SearchableActivity" />
        </activity>
        <activity
            android:name=".activities.ComposeTweetActivity"
            android:label="Twimight"
            android:launchMode="singleTop"
            android:theme="@style/TranslucentTheme"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activities.ComposeDmActivity"
            android:label="Twimight"
            android:launchMode="singleTop"
            android:theme="@style/TranslucentTheme"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activities.SettingsActivity"
            android:label="Settings" />
        <activity
            android:name=".activities.AboutActivity"
            android:label="About Twimight"
            android:theme="@style/TwimightHolo.NormalMode.NoActionBar" />
        <activity
            android:name=".activities.WebViewActivity"
            android:label="WebView"
            android:theme="@style/TwimightHolo.NormalMode.NoActionBar" />

        <service
            android:name=".net.tds.TDSService"
            android:enabled="true" />
        <service
            android:name=".net.opportunistic.ScanningService"
            android:enabled="true" />
        <service
            android:name=".net.twitter.PicturesIntentService"
            android:enabled="true" />
        <service
            android:name=".net.Html.HtmlService"
            android:enabled="true" />
        <service
            android:name=".net.twitter.TwitterService"
            android:enabled="true" >
            <intent-filter>
                <action android:name="twimight_synch" />
            </intent-filter>
        </service>

        <receiver
            android:name=".util.CommunicationReceiver"
            android:enabled="true"
            android:priority="0" >
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".util.BootReceiver"
            android:enabled="true"
            android:permission="android.permission.RECEIVE_BOOT_COMPLETED" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />

                <category android:name="android.intent.category.HOME" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".util.OMFReceiver"
            android:enabled="true" >
            <intent-filter>
                <action android:name="autom_enable_disaster_mode" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".net.opportunistic.ScanningAlarm"
            android:enabled="true" />
        <receiver
            android:name=".net.tds.TDSAlarm"
            android:enabled="true" />
        <receiver
            android:name="ch.ethz.twimight.net.twitter.TwitterAlarm"
            android:enabled="true" />

        <provider
            android:name="ch.ethz.twimight.net.twitter.TweetsContentProvider"
            android:authorities="ch.ethz.twimight.Tweets"
            android:exported="true"
            android:permission="ch.ethz.twimight.CONTENT_PROVIDERS" />
        <provider
            android:name="ch.ethz.twimight.net.twitter.TwitterUsersContentProvider"
            android:authorities="ch.ethz.twimight.TwitterUsers"
            android:permission="ch.ethz.twimight.CONTENT_PROVIDERS" />
        <provider
            android:name="ch.ethz.twimight.net.twitter.DirectMessagesContentProvider"
            android:authorities="ch.ethz.twimight.DMs"
            android:permission="ch.ethz.twimight.CONTENT_PROVIDERS" />
        <provider
            android:name="ch.ethz.twimight.util.TwimightSuggestionProvider"
            android:authorities="ch.ethz.twimight.TwimightSuggestionProvider" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.RESTART_PACKAGES" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="ch.ethz.twimight.CONTENT_PROVIDERS" />

    <uses-feature
        android:name="android.hardware.bluetooth"
        android:required="false" />
    <uses-feature android:name="android.hardware.touchscreen" />

</manifest>