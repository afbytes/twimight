<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content" android:layout_width="fill_parent"
	android:orientation="horizontal" android:id="@+id/rowLayout">

	<ImageView android:id="@+id/imageView1"
		android:layout_marginRight="5dp" android:src="@drawable/default_profile"
		android:layout_height="45dp" android:layout_width="45dp"
		android:layout_marginTop="12dp" />


	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="vertical"
		android:descendantFocusability="beforeDescendants">

		<LinearLayout android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:layout_marginTop="6dp">

			<!-- placeholder for the digital signature icon -->
			<ImageView android:id="@+id/showTweetVerified" android:src="@drawable/blank"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:visibility="gone" />

			<!-- placeholder for the "unposted" notification -->
			<ImageView android:id="@+id/topost" android:src="@drawable/blank"
				android:layout_width="wrap_content" android:layout_height="wrap_content" />

			<!-- placeholder for the favorite icon -->
			<ImageView android:id="@+id/favorite" android:src="@drawable/blank"
				android:layout_width="wrap_content" android:layout_height="wrap_content" />

			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/textUser"
				android:text="BOB" android:textStyle="bold" android:textColor="@color/white"
				android:minLines="1" android:textSize="15sp"  />

			<TextView android:layout_height="wrap_content" android:id="@+id/tweetCreatedAt"
				android:text="10 minutes ago" android:layout_gravity="right"
				android:gravity="right" android:layout_width="fill_parent"
				android:textColor="@color/grey" android:layout_marginTop="10dp" />

		</LinearLayout>

		<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:id="@+id/textText"
			android:text="The latest status " android:textColor="@color/white"
			android:textSize="15sp" android:layout_marginBottom="8dp"/>
		
		<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:id="@+id/textRetweeted_by"
			android:text="" android:textColor="@color/grey"
			android:textSize="12sp" android:layout_marginLeft="2dp" 
			android:visibility="gone" android:layout_marginBottom="3dp"/>

	</LinearLayout>
</LinearLayout>
