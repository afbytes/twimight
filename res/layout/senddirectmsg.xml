<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
    
    <TextView android:id="@+id/textView1" android:layout_width="wrap_content" 
    android:layout_height="wrap_content" android:text="Username"></TextView>
    <EditText android:layout_width="wrap_content" 
    android:layout_height="wrap_content" android:maxLines="1" android:layout_weight="0" android:minWidth="150dp" android:id="@+id/userEditText"></EditText>
    
    <TextView android:id="@+id/textView2" android:layout_width="wrap_content" 
    android:layout_height="wrap_content" android:text="Message:"></TextView>
    <EditText android:layout_height="wrap_content" android:layout_weight="1" android:minLines="2" android:layout_width="match_parent" android:id="@+id/msgEditText"></EditText>
    
    <LinearLayout android:id="@+id/linearLayout1" android:layout_height="wrap_content" 
    android:layout_width="match_parent">
        <Button android:layout_height="wrap_content" android:text="Send" android:layout_width="160dp" android:id="@+id/buttonSendDirect"></Button>
        <Button android:layout_height="wrap_content" android:text="Cancel" android:layout_width="160dp" android:id="@+id/buttonCancelDirect"></Button>
    </LinearLayout>
</LinearLayout>
