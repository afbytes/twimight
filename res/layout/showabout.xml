<RelativeLayout 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent" 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/showAboutRoot">

<ImageView
    android:id="@+id/showAboutLayout"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:src="@drawable/bird" android:layout_marginLeft="10dp">

</ImageView>
<LinearLayout
	    android:id="@+id/showAboutLogo"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="bottom"
	    android:orientation="vertical"
	    android:background="@drawable/about_background"
	    android:layout_alignParentBottom="true"
	    android:layout_margin="10dp">

		<TextView android:id="@+id/textTwimight"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal" android:textSize="30dp"
			android:text="Twimight" android:textColor="@color/black" />
		<TextView android:id="@+id/textMighty" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
			android:textSize="16dp" android:text="The mighty Twitter client!" android:textColor="@color/black"/>

		<TextView android:id="@+id/textCopy" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_gravity="center"
			android:text="(c) CSG, ETH Zurich, 2012" android:layout_marginTop="10dp" android:textColor="@color/black"/>

		<LinearLayout android:id="@+id/linearLayout1"
			android:layout_width="match_parent" android:layout_height="wrap_content"
			android:orientation="vertical" android:layout_marginTop="15dp">

			<LinearLayout android:id="@+id/linearLayout2"
				android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp">

				<TextView android:id="@+id/textView3"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:text="Version:" android:layout_marginRight="20dp" android:textColor="@color/black"/>

				<TextView android:id="@+id/showAboutVersion"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:text="TextView" android:textColor="@color/black" />

			</LinearLayout>

		</LinearLayout>

		<LinearLayout android:id="@+id/linearLayout3"
			android:layout_width="match_parent" android:layout_height="wrap_content">

			<TextView android:id="@+id/textView5" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="Keys: "
				android:layout_marginRight="20dp" android:textColor="@color/black"/>

			<TextView android:id="@+id/showAboutKeys"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="TextView" android:layout_marginRight="20dp" android:textColor="@color/black"/>

			<Button android:id="@+id/showAboutRevoke" android:layout_width="wrap_content" android:layout_height="wrap_content"
			     android:text="Revoke" android:minHeight="30dp" android:minWidth="50dp"/>

		</LinearLayout>

		<LinearLayout android:id="@+id/linearLayout4"
			android:layout_width="match_parent" android:layout_height="wrap_content">

			<TextView android:id="@+id/textView7" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="TDS Update"
				android:padding="0dp" android:layout_marginRight="20dp" android:textColor="@color/black"/>

			<TextView android:id="@+id/showAboutLastUpdate"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="TextView" android:layout_marginRight="20dp" android:textColor="@color/black"/>

			<Button android:id="@+id/showAboutUpdate" android:text="Update"
				android:layout_width="wrap_content" android:layout_height="wrap_content" android:visibility="visible"
				android:minHeight="30dp" android:minWidth="50dp" />

		</LinearLayout>

	</LinearLayout>
</RelativeLayout>